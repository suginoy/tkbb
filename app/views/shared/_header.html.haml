.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to '#tkbb', root_path, :class => 'brand'
      %ul.nav
        %li= link_to 'みんなの記録', climbings_path
        %li= link_to '記録をつける', new_climbing_path
      %ul.nav.nav-pills.pull-right
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{:data => { :toggle => 'dropdown', :target => '#'}, :href => signout_path}
              Welcome #{current_user.name.try(:html_safe)}
              %b{:class => 'caret'}
            %ul.dropdown-menu
              %li= link_to 'Sign-out', signout_path
        - else
          %li= link_to 'Sign-in with Twitter', signin_path(:provider => 'twitter')
          - if Rails.env.development?
            %li= link_to 'Sign-in as Developer', signin_path(:provider => 'developer')
