<h1>Listing gyms</h1>

<%= form_tag :gyms, :method => :get, :style => "text-align: right" do %>
  <%= text_field_tag "query", params[:query] %> <%= submit_tag "search" %>
<% end %>

<table class="gyms">

  <col class="name" />
  <col span="2" class="pos" />
  <col span="2" class="action" />

  <tr>
    <th>name</th>
    <th>latitude</th>
    <th>longitude</th>      
    <th></th>      
  </tr>
    
  <% @gyms.each do |gym| %>
  <tr>
    <td><%= gym.name %></td>
    <td><%= gym.latitude %></td>
    <td><%= gym.longitude %></td>
    <td>
      <%= link_to 'Show', gym %> /
      <%= link_to 'Edit', edit_gym_path(gym) %> /
      <%= link_to 'Destroy', gym, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Gym', new_gym_path %>
